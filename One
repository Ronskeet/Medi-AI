    <script>
      // Accessibility utilities
      const navToggle = document.querySelector('.mobile-toggle');
      const navLinks = document.querySelector('.nav-links');

      navToggle?.addEventListener('click', () => {
        const expanded = navToggle.getAttribute('aria-expanded') === 'true';
        navToggle.setAttribute('aria-expanded', String(!expanded));
        navLinks.classList.toggle('show');
      });

      // Wins Ledger dynamic rows
      const winsTable = document.getElementById('wins-table').querySelector('tbody');
      const addRowBtn = document.getElementById('add-row-btn');
      const exportBtn = document.getElementById('export-json-btn');
      const clearBtn = document.getElementById('clear-rows-btn');

      function createRow() {
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td><input type="date" aria-label="Date"></td>
          <td><textarea rows="2" placeholder="Describe micro action..."></textarea></td>
          <td><textarea rows="2" placeholder="Outcome / Insight..."></textarea></td>
          <td><input type="number" min="1" max="10" placeholder="5"></td>
          <td><button type="button" class="btn alt delete-row" style="padding:.4rem .6rem;">×</button></td>
        `;
        winsTable.appendChild(tr);
      }

      addRowBtn?.addEventListener('click', createRow);

      document.addEventListener('click', (e) => {
        if (e.target.classList.contains('delete-row')) {
          const row = e.target.closest('tr');
            if (row) row.remove();
        }
      });

      exportBtn?.addEventListener('click', () => {
        const data = [];
        winsTable.querySelectorAll('tr').forEach(tr => {
          const cells = tr.querySelectorAll('td');
          const date = cells[0].querySelector('input').value;
          const action = cells[1].querySelector('textarea').value;
          const outcome = cells[2].querySelector('textarea').value;
          const impact = cells[3].querySelector('input').value;
          if (date || action || outcome || impact) {
            data.push({ date, action, outcome, impact });
          }
        });
        const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.download = 'wins-ledger.json';
        a.href = url;
        a.click();
        URL.revokeObjectURL(url);
      });

      clearBtn?.addEventListener('click', () => {
        if (confirm('Clear all dynamic rows?')) {
          winsTable.innerHTML = '';
        }
      });

      // Interest form pseudo-processing
      const form = document.getElementById('interest-form');
      const formStatus = document.getElementById('form-status');
      form?.addEventListener('submit', (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const payload = Object.fromEntries(formData.entries());
        // Basic validation
        if (!payload.name || !payload.email) {
          formStatus.textContent = 'Please fill required fields (Name, Email).';
          formStatus.style.color = '#ff5f56';
          return;
        }
        formStatus.textContent = 'Submitting...';
        formStatus.style.color = '#b7c2d1';
        setTimeout(() => {
          formStatus.textContent = 'Submitted. We will contact you soon (simulation).';
          formStatus.style.color = '#4cc38a';
          form.reset();
        }, 900);
      });

      // Current year
      document.getElementById('year').textContent = new Date().getFullYear();
    </script>
  </body>
  </html>
